{
  "compilerOptions": {
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es6"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "screens",
    "components",
    "screens/cook/Cook.tsx",
    "utils/DataBaseConnection.tsx",
    "utils/interfaceTranslations.tsx",
    "utils/database/supabaseClient.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
